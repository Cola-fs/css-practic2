<header class="header">

    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header }}
        </div>
    </nav>
</header>

<main class="main">
    {{#with messages}}
    <div class="messages">
        <h1 class="message_title">{{title}}</h1>
        {{#each list}}
        <div class="msg">
            <strong class="msg_name">{{name}}</strong>
            <p class="msg_message">{{message}}</p>
            <span class="msg_day">{{day}}</span>
        </div>
        {{/each}}
        <a href="" class="message_link">All messages</a>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_inputs_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="name" id="form_input_{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">

            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button class="form_button" type="submit"> {{button}}</button>

        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
    <div class="advantages">
        {{#each advantages}}
        <div>
            <strong class="advantages_title">{{title}}</strong>
            <p class="advantages_text">{{text}}</p>
        </div>
        {{/each}}
    </div>
</main>







<footer class=" footer">
    <div class="">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true }}
    </div>
    {{/each}}
</footer>




