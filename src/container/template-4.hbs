<header class="header">

    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header }}
        </div>
    </nav>
</header>

<main class="main">
    {{#with main}}
    <img src="{{image}}" alt="main image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">
            {{heading}}
        </h1>
        <p class="main_description">
            {{descriotion}}
        </p>
        <a href="{{href}}" class="main_button">{{button}}</a>

    </div>

    {{/with}}
</main>

<div class="featured">
    {{#each featured}}
    <div class="card_featured">
        <img src="{{photo}}" alt="photo" class="featured_photo">
        <h2 class="featured_title">
            {{heading}}
        </h2>
        <p class="featured_info">
           {{info}} 
        </p>
        <a href="{{linkUrl}}" class="featured_button">{{linkText}}</a>
    </div>
    
    {{/each}}

</div>

<div class="actions">
    {{#each actions}}
    <div class="actions_content">
        <h2 class="actions_title">
            {{heading}}
        </h2>
        <a href="url" class="action_button">{{text}}</a>
    </div>
    {{/each}}
</div>



<footer class=" footer">
    <div class="">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true }}
    </div>
    {{/each}}
</footer>




