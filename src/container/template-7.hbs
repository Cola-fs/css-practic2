<header class="header">
    {{#with header}}
    <div class="header_top">
        <div class="logo">
            <span class="logo_title">
                {{brandName}}
            </span>
        </div>
        <div class="nav">
            {{#each links}}
            <a href="{{url}}" class="nav_link">{{text}}</a>
            {{/each}}
        </div>
    </div>
    <div class="header_ad">
        {{#with ad}}
        <div class="header_ad_left">
            <div class="header_ad_logo">
                <span>Ad</span>
            </div>
            <a href="{{url}}" class="nav_link ad_link">{{url}}</a>
        </div>

        {{/with}}
        <span>Users online: {{userOnline}}</span>

    </div>
    {{/with}}
</header>

<div class="hero">
    {{#with hero}}
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_description">{{description}}</p>
    {{#with button}}
    <a class="hero_button" href="{{url}}">{{text}}</a>
    {{/with}}
    {{/with}}
</div>

<main class="main">

    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="form_inputs_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="name" id="form_input_{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">

            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button class="form_button" type="submit"> {{button}}</button>

        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}

</main>


{{#with updates}}
<div class="updates">
    <h3 class="updates_title">
        {{title}}
    </h3>
    {{#each list}}
    <div class="list">
        <div>
            <img src="https://picsum.photos/32/32" alt="foto nickname">
        </div>
        <span class="list_nickname">{{nickname}}</span>
        <p class="list_description">{{description}}</p>
    </div>
    {{/each}}
    {{#with show_all}}
    <a href="{{url}}" class="link_show_all">{{text}}</a>
    {{/with}}

</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
    <h2 class="expirience_title">{{title}}</h2>
    <div class="experience_badge">
        <span class="span_experience_badge">{{badge}}</span>
    </div>
    <div class="experience_list">
        {{#each list}}
        <div>
            <h3 class="experience_list_name">{{name}}</h3>
            <p class="experience_list_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}


<footer class=" footer">
    <div class="">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true }}
    </div>
    {{/each}}
</footer>




