<header class="header">
    {{> headerDark data=header}}
</header>

<div class="hero">
    {{#with hero}}
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_description">{{description}}</p>
    {{#with button}}
    <a class="hero_button" href="{{url}}">{{text}}</a>
    {{/with}}
    {{/with}}
</div>

<div class="about">
    {{#with about}}
    <h2 class="about_heading">{{heading}}</h2>
    <p class="about_info">{{info}}</p>
    {{/with}}

</div>



<main class="articles">

    <div class="articles_header">
        <h2 class="articles_title">Our Articles</h2>
        <a class="articles_all_link" href="#">View All</a>
    </div>

    {{> articleCardDark data=articles}}
</main>

<footer class=" footer">
    {{> footerDark data=footer}}
</footer>




